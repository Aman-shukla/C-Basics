#include<stdio.h>
void starpattern(int rows)
{
    int i,j;
    for ( i = 0; i < rows; i++)
    {
        for ( j = 0; j<=i; j++)
        {
            printf("*");
        }
        
        
        printf("\n");
    }
    
}
void reversestarpattern(int rows)
{
    int i,j;
    for ( i = 0; i < rows; i++)
    {
        for ( j = 0; j<=rows-i-1; j++)
        {
            printf("*");
        }
        
        
        printf("\n");
    }
    
}
int main()
{
    int rows;
    printf("How many rows do you want?\n");
    scanf("%d",&rows);
    reversestarpattern(rows);
    return 0;
}
