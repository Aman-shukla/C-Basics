#include<stdio.h>  
 int main()    
{    
   int n,b,r,c,sum=0;
    printf("Enter a number less then 32768: ");
    scanf("%d", &n);

    b = n;

             // store the number of digits of n in c
   for (c>=0; b!= 0; ++c) {
       b /= 10;
   }

   for (b<=n; b!=0; b/= 10) {
       r = b % 10;

            // store the sum of the power of individual digits in sum
      sum+= pow(r, c);
   }

          // if num is equal to result, the number is an Armstrong number
   if (sum == b)
    printf("%d is an Armstrong number.", n);
   else
    printf("%d is not an Armstrong number.", n);
   return 0;
}   
