#include<stdio.h>
float main()
{
    float a,b,c;
    printf("Enter the first side of triangle\n");
    
    scanf("%f",&a);
    printf("Enter the second side of triangle\n");
    
    scanf("%f",&b);
    printf("Enter the third side of triangle\n");
    
    scanf("%f",&c);
    printf("The first side of triangle is %f\n",a);
     printf("The second side of triangle is %f\n",b);
      printf("The third side of triangle is %f\n",c);
    
    
    

    if((a+b>c)&&(b+c>a)&&(c+a>b))
    {
printf("Triangle is formed\n");
    }
    else
    {
        printf("Triangle is not formed");
    }
    return 0;
    
}
